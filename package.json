{
  "name": "gurukulams-website",
  "version": "1.0.0",
  "description": "Gurukulams Website",
  "source": "src/index.html",
  "author": "Sathish Kumar Thiyagarajan",
  "license": "ISC",
  "scripts": {
    "clean": "rimraf dist",
    "copy:bootstrap": "cpy \"node_modules/bootstrap/dist/**/*\" dist/bootstrap",
    "copy:vendor": "node scripts/copy-vendor-css.js",
    "copy:fonts": "cpy \"node_modules/@fortawesome/fontawesome-free/webfonts/**/*\" dist/webfonts",
    "watch:sass": "onchange \"src/scss\" -- run-s build:sass",
    "watch:site": "onchange \"site\" -- run-s build:site",
    "watch:questions": "node scripts/build-questions.js --watch",
    "start": "npm run build && run-p watch:* serve",
    "serve": "webpack serve",
    "build:js": "webpack",
    "build:sass": "sass src/scss:dist/css",
    "build:site": "hugo --minify -d ../dist -s site",
    "build:questions": "node scripts/build-questions.js",
    "build": "run-s clean copy:fonts copy:bootstrap copy:vendor build:*",
    "postinstall": "npm run build"
  },
  "devDependencies": {
    "@popperjs/core": "^2.11.8",
    "@recogito/recogito-js": "^1.8.4",
    "bootstrap": "^5.3.7",
    "chokidar": "^4.0.3",
    "clean-webpack-plugin": "^4.0.0",
    "cpy-cli": "^5.0.0",
    "gray-matter": "^4.0.3",
    "hugo-bin": "0.144.8",
    "jsonschema": "^1.5.0",
    "npm-run-all": "4.1.5",
    "onchange": "^7.1.0",
    "qrious": "^4.0.2",
    "rimraf": "^6.0.1",
    "sass": "1.89.2",
    "webpack": "5.99.9",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "5.2.2"
  },
  "browserslist": [
    "defaults"
  ],
  "dependencies": {
    "@fortawesome/fontawesome-free": "^7.0.0",
    "@recogito/annotorious": "^2.7.13",
    "@recogito/annotorious-toolbar": "^1.2.1",
    "easymde": "^2.20.0",
    "highlight.js": "^11.11.1",
    "jsxgraph": "^1.11.1",
    "katex": "^0.16.22",
    "markdown-it": "^14.1.0",
    "quill": "^2.0.3",
    "reveal.js": "^5.2.1"
  }
}
